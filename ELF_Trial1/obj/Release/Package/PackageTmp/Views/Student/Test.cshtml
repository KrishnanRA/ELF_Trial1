    <style>
        @@import 'http://fonts.googleapis.com/css?family=Lato';

        .container {
            display: block;
            position: absolute;
            margin: auto;
            height: 450px;
            width: 400px;
            bottom: 0;
            left: 0;
            right: 0;
            top: 0;
            padding: 0;
        }

            .container ul {
                list-style: none;
                height: 60%;
                width: 60%;
                margin: 0;
                padding: 0;
            }


        ul li {
            color: #AAAAAA;
            display: block;
            position: relative;
            float: left;
            width: 100%;
            height: 100px;
            border-bottom: 1px solid grey;
        }
        .checkbox_div label {
            color:white
        }

            .checkbox_div .answer_div ul li input[type=radio] {
                position: absolute;
                visibility: hidden;
            }

            .checkbox_div  .answer_div ul li label {
                display: block;
                color: red;
                position: relative;
                font-weight: 300;
                font-size: 1.35em;
                padding: 30px 30px 30px 80px;
                margin: 10px auto;
                height: 30px;
                z-index: 9;
                cursor: pointer;
                -webkit-transition: all 0.25s linear;
            }

          

            .checkbox_div  .answer_div ul li .check {
                display: block;
                position: absolute;
                border: 1px solid wheat;
                border-radius: 100%;
                height: 25px;
                width: 25px;
                top: 30px;
                left: 20px;
                z-index: 5;
                transition: border .25s linear;
                -webkit-transition: border .25s linear;
            }

            .checkbox_div .answer_div ul li:hover .check {
                border: 5px solid #FFFFFF;
            }

            .checkbox_div  .answer_div ul li .check::before {
                display: block;
                position: absolute;
                content: '';
                border-radius: 100%;
                height: 15px;
                width: 15px;
                top: 5px;
                left: 5px;
                margin: auto;
                transition: background 0.25s linear;
                -webkit-transition: background 0.25s linear;
            }

        .checkbox_div  .answer_div input[type=radio]:checked ~ .check {
            border: 10px solid #48e303;
        }

        .checkbox_div  .answer_div input[type=radio] {
            display: none;
        }

            .checkbox_div  .answer_div input[type=radio]:checked ~ .check::before {
                border-radius: 20%;
                color: rebeccapurple;
                height: 20px;
                width: 20px;
                top: 30px;
                left: 10px;
                transition: border .25s linear;
                -webkit-transition: border .25s linear;
            }

            .checkbox_div .answer_div input[type=radio]:checked ~ label {
                color: wheat;
            }
    </style>
    <style>
        .quest input[type=radio] {
            display: none;
        }

        .checkbox_div [type=radio] + label {
            color: #e16300;
            border: 1px solid #fceeed;
            padding: 0px 10px 0px 10px;
            font-size: 16px;
            margin-left: 3px;
        }

        .checkbox_div input[type=radio]:checked + label {
            color: red;
            border: 2px solid #6bff20;
        }
    </style>
