            }

            .checkbox_div  .answer_div ul li label {
                display: block;
                color: #434343;
                position: relative;
                font-weight: 300;
                font-size: 1.35em;
                padding: 30px 30px 30px 80px;
                margin: 10px auto;
                height: 30px;
                z-index: 9;
                cursor: pointer;
                -webkit-transition: all 0.25s linear;
            }

            .checkbox_div  .answer_div ul li:hover label {
                color: darkslateblue;
            }

            .checkbox_div  .answer_div ul li .check {
                display: block;
                position: absolute;
                border: 5px solid #f7f2f2;
                border-radius: 100%;
                height: 25px;
                width: 25px;
                top: 30px;
                left: 20px;
                z-index: 5;
                transition: border .25s linear;
                -webkit-transition: border .25s linear;
            }

            .checkbox_div .answer_div ul li:hover .check {
                border: 5px solid #FFFFFF;
            }

            .checkbox_div  .answer_div ul li .check::before {
                display: block;
                position: absolute;
                content: '';
                border-radius: 100%;
                height: 15px;
                width: 15px;
                top: 5px;
                left: 5px;
                margin: auto;
                transition: background 0.25s linear;
                -webkit-transition: background 0.25s linear;
            }

        .checkbox_div  .answer_div input[type=radio]:checked ~ .check {
            border: 10px solid #48e303;
        }

        .checkbox_div  .answer_div input[type=radio] {
            display: none;
        }

            .checkbox_div  .answer_div input[type=radio]:checked ~ .check::before {
                border-radius: 20%;
                color: rebeccapurple;
                height: 20px;
                width: 20px;
                top: 30px;
                left: 10px;
                transition: border .25s linear;
                -webkit-transition: border .25s linear;
            }

            .checkbox_div .answer_div input[type=radio]:checked ~ label {
                color: #48e303;
            }
    </style>
